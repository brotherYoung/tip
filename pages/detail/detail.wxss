/* pages/detail/detail.wxss */
@import "/styles/icon-svg/icon-svg.wxss";
.card {
    border-radius: 4px;
    border: 1px solid #ebeef5;
    background-color: #fff;
    overflow: hidden;
    color: #303133;
    transition: .3s;
    box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);
    width: 600rpx;
    height: 700rpx;
    padding: 50rpx 40rpx;
}

.picker {
    color: #808080;
}

.no-border textarea {
  width: 100%;
  height: 260rpx;
  padding-bottom: 20rpx;
}

.bottom button {
  display: inline-block;
  margin: 80rpx 80rpx 0 130rpx;
  border: none
}

.bottom button::after {
  border: none;
}
